{
    "compilerOptions": {
        "strictNullChecks": false,
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "target": "es2019",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "src/custom.d.ts",
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "type": [
        "@types/node"
    ]
}
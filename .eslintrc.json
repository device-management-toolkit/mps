{
    "env": {
        "es2020": true,
        "node": true,
        "jest": true
    },
    "extends": [
       "standard-with-typescript"
    ],
    "ignorePatterns": "**/*.js",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": 0,
        "@typescript-eslint/explicit-function-return-type": 1
    }
}
